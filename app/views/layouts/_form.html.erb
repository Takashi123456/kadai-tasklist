<%= form_with(model: task) do |t| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul class="mb-0">
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= t.label :status,'ステータス' %>
    <%= t.text_field :status, class:'form-control' %>
  </div>
  <div class="mb-3">
    <%= t.label :content,'タスク' %>
    <%= t.text_field :content, class:'form-control' %>
  </div>
 
    <%= t.submit '登録', class: 'btn btn-primary' %>
    
<% end %>